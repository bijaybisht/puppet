; Generated by puppet module dns
$TTL 86400                          ; 1 day
<%
    zone = @domains_byname[@domain]
    nameserver = zone['nameserver']
-%>
$ORIGIN <%= @domain %>.
@ IN SOA <%= @alias %>.<%= @domain %>. postmaster.<%= @domain %>. (
                    2014070800      ; serial
                    10800           ; refresh (3 hours)
                    900             ; retry (15 minutes)
                    1814400         ; expire (3 weeks)
                    10800           ; minimum (3 hours)
                )
                NS <%= @alias %>.<%= @domain %>.
<%= @alias %> A <%= nameserver['ip'] %>
<% nameserver['fixed'].each do |host| -%>
<%= host['name'] %> A <%= host['ip'] %>
<% end -%>
$TTL 10800                          ; 3 hours
