; Generated by puppet module dns
$TTL 43200                          ; 12 hours
<%
    zone = @domains_byname[@domain]
    nameserver = zone['nameserver']
-%>
$ORIGIN <%= zone['reverse'] %>.IN-ADDR.ARPA.
@ IN SOA <%= @alias %>.<%= @domain %>. postmaster.<%= @domain %>. (
            2013020432              ; serial
            3600                    ; refresh (1 hour)
            300                     ; retry (5 minutes)
            172800                  ; expire (2 days)
            43200                   ; minimum (12 hours)
            )
            NS <%= @alias %>.<%= @domain %>.

$ORIGIN <%= nameserver['reverse'] %>.IN-ADDR.ARPA.
<%= nameserver['hostid'] %> PTR <%= @alias %>.<%= @domain %>.
<% nameserver['fixed'].each do |host| -%>
$ORIGIN <%= host['reverse'] %>.IN-ADDR.ARPA.
<%= host['hostid'] %> PTR <%= host['name'] %>.<%= @domain %>.
<% end -%>
$TTL 10800                          ; 3 hours
