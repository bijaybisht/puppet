// Generated by the dns puppet module

//
// named.conf
//
// Provided by Red Hat bind package to configure the ISC BIND named(8) DNS
// server as a caching only nameserver (as a localhost DNS resolver only).
//
// See /usr/share/doc/bind*/sample/ for example named configuration files.
//

options {
    //listen-on port 53 { 0.0.0.0; };
    //listen-on-v6 port 53 { ::1; };
    directory "/var/named";
    dump-file "/var/named/data/cache_dump.db";
    statistics-file "/var/named/data/named_stats.txt";
    memstatistics-file "/var/named/data/named_mem_stats.txt";
    //allow-query { clients; };
    recursion yes;

    //dnssec-enable no;
    //dnssec-validation yes;
    //dnssec-lookaside auto;

    /* Path to ISC DLV key */
    bindkeys-file "/etc/named.iscdlv.key";

    managed-keys-directory "/var/named/dynamic";

    forwarders { <%= @forwarders.join("; ") %>; };
};

logging {
    channel default_debug {
        file "data/named.run";
        severity dynamic;
    };
};

key dhcpupdate {
    algorithm hmac-md5;
    secret "<%= @secret %>";
};

zone "." IN {
    type hint;
    file "named.ca";
};

//include "/etc/named.rfc1912.zones";
//include "/etc/named.root.key";
<% 
    @domains.each do |zone|
    nameserver = zone['nameserver']
-%>
<% if @domain == zone['name'] -%>
zone "<%= zone['name'] %>" in {
    type master;
    file "data/forward.db";
    allow-update { key dhcpupdate; };
};

zone "<%= zone['reverse'] %>.IN-ADDR.ARPA" in {
    type master;
    file "data/reverse.db";
    allow-update { key dhcpupdate; };
};

<% else -%>
zone "<%= zone['name'] %>" in {
    type forward;
    forwarders { <%= nameserver['ip'] %>; };
};
<% if zone['reverse'] -%>
zone "<%= zone['reverse'] %>.IN-ADDR.ARPA" in {
    type forward;
    forwarders { <%= nameserver['ip'] %>; };
};
<% end -%>
<% end -%>
<% end -%>
